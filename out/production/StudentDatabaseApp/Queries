 1. Create DB
CREATE DATABASE IF NOT EXISTS StudentInformationDatabase;

 2. Use DB
USE StudentInformationDatabase;

 3. Create table
CREATE TABLE IF NOT EXISTS students (
  id     INT PRIMARY KEY AUTO_INCREMENT,
  reg_no VARCHAR(20)  NOT NULL UNIQUE,
  name   VARCHAR(100) NOT NULL,
  email  VARCHAR(100),
  phone  VARCHAR(20),
  gpa    DECIMAL(3,2)  -- keep simple; validated in code (0.00â€“4.00)
);

